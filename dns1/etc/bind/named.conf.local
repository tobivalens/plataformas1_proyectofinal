# Clave TSIG compartida con los servidores secundarios
include "/etc/bind/keys/tsig-ns.key";

# Zona directa principal del dominio
zone "proyecto.tel" {
    type master;
    file "/etc/bind/zones/db.proyecto.tel.signed";
    allow-transfer { key "tsig-ns."; 192.168.2.103; 192.168.2.105; };
    also-notify { 192.168.2.103; 192.168.2.105; };
};

# Zona inversa IPv4
zone "2.168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/zones/db.192.168.2";
    allow-transfer { key "tsig-ns."; 192.168.2.103; 192.168.2.105; };
};

# Zona inversa IPv6
zone "2.0.0.0.d.a.c.a.8.b.d.0.1.0.0.2.ip6.arpa" {
    type master;
    file "/etc/bind/zones/db.2001db8acad2.rev";
    allow-transfer { key "tsig-ns."; 192.168.2.103; 192.168.2.105; };
};